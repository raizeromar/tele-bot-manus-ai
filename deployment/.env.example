# Environment Variables for Telegram AI Agent (Production)

# Django Settings
SECRET_KEY=change_this_to_a_secure_random_string
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database Settings
DB_NAME=telegram_ai_agent
DB_USER=postgres
DB_PASSWORD=secure_password_here
DB_HOST=db
DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Telegram Settings
# You need to obtain these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Google Gemini AI Settings
# You need to obtain this from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key

# Frontend Settings
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# Docker Compose Settings
POSTGRES_PASSWORD=secure_password_here
POSTGRES_USER=postgres
POSTGRES_DB=telegram_ai_agent
